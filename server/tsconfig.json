{
  "compileroptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "removeComments": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./lib",
    "resolveJsonModule": true
  },
  "include": ["lib/**/*.ts", "lib/**/*.json"],
  "exclude": ["node_modules"]
}
